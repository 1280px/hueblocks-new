{
    "compilerOptions": {
        "target": "es2024",
        "module": "es2022",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["./src/*"],
        },
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
}
